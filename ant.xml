<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project name="AmstradPc" basedir="." default="buildWar">
	<taskdef name="getdown-dot-text" classname="org.maia.amstrad.util.getdown.GetdownDotTextGeneratorTask">
		<classpath>
			<pathelement location="lib/amstradPc-ant.jar" />
		</classpath>
	</taskdef>

	<taskdef name="getdown-digest" classname="com.threerings.getdown.tools.DigesterTask">
		<classpath>
			<pathelement location="lib/getdown-ant-1.8.7.jar" />
			<pathelement location="lib/getdown-core-1.8.7.jar" />
		</classpath>
	</taskdef>

	<taskdef name="tomcat-deploy" classname="org.apache.catalina.ant.DeployTask">
		<classpath>
			<path location="${libraries.home}/ant/tomcat/catalina-ant.jar" />
			<path location="${libraries.home}/ant/tomcat/catalina.jar" />
		</classpath>
	</taskdef>

	<target name="buildJar">
		<jar destfile="deploy/amstradPc.jar">
			<manifest>
				<attribute name="Main-Class" value="org.maia.amstrad.AmstradMain" />
				<attribute name="Class-Path" value="." />
			</manifest>
			<zipfileset src="lib/maiaUtils.jar" />
			<zipfileset src="lib/maiaSwing.jar" />
			<zipfileset src="lib/maiaInputDevice.jar" />
			<zipfileset src="lib/maia2d.jar" />
			<zipfileset src="lib/phylopicSvg.jar" />
			<fileset dir="bin" />
		</jar>
	</target>

	<target name="stageWar" depends="buildJar">
		<delete dir="deploy/staging" />
		<mkdir dir="deploy/staging/${distribution.id}" />
		<copy todir="deploy/staging/${distribution.id}">
			<file file="deploy/amstradPc.jar" />
		</copy>
		<jar destfile="deploy/staging/${distribution.id}/system/system.jar">
			<fileset dir="system" />
		</jar>
		<copy todir="deploy/staging/${distribution.id}/images">
			<fileset dir="resources/images/launcher" />
			<fileset dir="resources/images/icons" />
			<file file="resources/images/covers/badge/phylopic-db.zip" />
		</copy>
		<copy todir="deploy/staging/${distribution.id}/${distribution.programbase}">
			<fileset dir="${program-repo.source}" />
		</copy>
		<getdown-dot-text destfile="deploy/staging/${distribution.id}/getdown.txt" appbase="${distribution.appbase}" programsource="${program-repo.source}" programbase="${distribution.programbase}" />
		<getdown-digest appdir="deploy/staging/${distribution.id}" />
	</target>

	<target name="buildWar" depends="stageWar">
		<war destfile="deploy/amstradpc.war" webxml="deploy/web.xml">
			<fileset dir="docs">
				<include name="javadoc/**/*" />
			</fileset>
			<fileset dir="deploy/staging" />
		</war>
		<delete dir="deploy/staging" />
	</target>

	<target name="deployWar">
		<tomcat-deploy url="${tomcat-url}" username="${tomcat-username}" password="${tomcat-password}" path="/amstradpc" update="true" war="file:deploy/amstradpc.war" />
	</target>

	<target name="buildAndDeployWar" depends="buildWar, deployWar">
	</target>

</project>